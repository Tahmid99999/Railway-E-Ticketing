@model E_TICKET.Models.ContactUs

<!DOCTYPE html>
<style>
    .main { /*FJA-Farin Jaman Aranyak*/
        margin: auto; 
        width: 100%;
        border: 3px solid #73AD21;
        background-color: #1a66ff;
        height: 700px;
        margin-top: 100px;
        box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2), 0 6px 20px 0 rgba(0,0,0,0.19);
    }

    .info {
        margin-left: 20%;
        font-family: Garamond, serif;
    }

    .location {
        width: 25%;
        float: left;
        background-color: white;
        margin: 5px;
        padding: 3px;
        text-align: center;
    }

    .phone_number {
        width: 25%;
        float: left;
        background-color: white;
        margin: 5px;
        padding: 3px;
        text-align: center;
        height:120px
    }

    .email {
        width: 25%;
        float: left;
        background-color: white;
        margin: 5px;
        padding: 3px;
        text-align: center;
        height: 120px;
    }

    .mail_box {
        align-content:center;
        float: left;
        margin-top: -3%;
        margin-left:-30px;
        text-align: center;
        background-color: #80aaff;
        font-family: Copperplate, Papyrus, fantasy;
        box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2), 0 6px 20px 0 rgba(0,0,0,0.19);
    }

    .name_box {
        padding: 10px;
        height: 30px;
    }

    .email_box {
        padding: 10px;
        height: 30px;
    }

    .btn {
        padding: 10px;
    }

    .btn_ct {
        background-color: #4CAF50; /* Green */
        border: none;
        color: white;
        padding: 15px 32px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        margin: 4px 2px;
        cursor: pointer;
        -webkit-transition-duration: 0.4s; /* Safari */
        transition-duration: 0.4s;
        box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2), 0 6px 20px 0 rgba(0,0,0,0.19);
    }
    .mssg{
        padding:10px;
    }
    /*for waring msg*/
    .alert {
        padding: 20px;
        background-color: #ff9800;
        color: white;
    }

    .closebtn {
        margin-left: 15px;
        color: white;
        font-weight: bold;
        float: right;
        font-size: 22px;
        line-height: 20px;
        cursor: pointer;
        transition: 0.3s;
    }

        .closebtn:hover {
            color: black;
        }
</style>

<html>
<head>
    <title>Contact Us</title>
</head>
<body>
    <div class="alert">
        <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
        <strong>Warning!</strong>Please make sure all fields are filled in correctly.
    </div>
    <div class="main">
        <div class="info">
            <div class="location">
                <h3>OUR MAIN OFFICE</h3>
                <address>
                    HOUSE NO#32/A,Shekertek-6<br>
                    Mohammodpur,Dhaka-1207
                </address>
            </div>
            <div class="phone_number">
                <h3>PHONE NUMBER</h3>
                <p>+8801724615130</p>
            </div>
            <div class="email">
                <h3>EMAIL</h3>
                <p>aust.decipher@gmail.com</p>
            </div>
        </div>
        <div class="mail_box">
            <form id="#" method="post">
                <div class="header_text">
                    <h3>Contact Us</h3>
                </div>
                <div class="name_box">
                    <label for="name">Name</label>
                    <input type="text" id="name" name="name" required>
                </div>
                <div class="email_box">
                    <label for="email">Email</label>
                    <input type="email" id="email" name="email" required>
                </div>
                <div class="text_box">
                    <div class="mssg">
                        <textarea id="subject" name="msg" placeholder="Write something.." style="height:200px; width:500px;" maxlength="120"></textarea>
                    </div>
                </div>
                <div class="btn">
                    <input type="submit" value="SUBMIT" class="btn_ct">
                </div>

            </form>
        </div>

        <center>
            @if (ViewBag.Message != null)
            {
                <script type="text/javascript">
                    window.onload = function () {
                    alert("@ViewBag.Message");
                };
                </script>
            }
        </center>

    </div>

</body>
</html>
